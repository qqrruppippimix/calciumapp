<p id="notice"><%= notice %></p>

<h1>Listing Spanish Books</h1>

<table>
  <thead>
    <tr>
      <th>Price</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spanish_books.each do |spanish_book| %>
      <tr>
        <td><%= spanish_book.price %></td>
        <td><%= spanish_book.description %></td>
        <td><%= link_to 'Show', spanish_book %></td>
        <td><%= link_to 'Edit', edit_spanish_book_path(spanish_book) %></td>
        <td><%= link_to 'Destroy', spanish_book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

